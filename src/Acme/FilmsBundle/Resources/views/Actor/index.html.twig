{% extends 'AcmeFilmsBundle::base.html.twig' %}

{% block body -%}
    <h1>Actor list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('actor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('actor_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li>
                            <a href="{{ path('actor_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    {% endif %}
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <ul>
            <li>
                <a href="{{ path('actor_new') }}">
                    <button class="btn btn-primary">Create a new entry</button>
                </a>
            </li>
        </ul>
    {% endif %}
{% endblock %}
